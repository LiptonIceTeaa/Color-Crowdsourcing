<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- Outer circle (default color) -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/black"/> <!-- Replace with your outer circle color -->
                </shape>
            </item>
            <!-- Inner circle (selected color) -->
            <item android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white"/> <!-- Replace with your inner circle color -->
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Transparent for the default state -->
        </shape>
    </item>
</selector>