<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/overlay_meun_logout_confirm_style"
    android:paddingTop="10dp"


    >

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtSendUsAnEmail"
        android:textSize="13sp"
        android:textAlignment="center"
        android:textColor="#5A5A5A"
        android:paddingBottom="16dp"
        android:layout_gravity="center"/>



    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:entries="@array/ticket_options"/>


    <View
        android:id="@+id/viewSepUnderComplaing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="#EEEEEE " /> <!-- Line color -->

    <EditText
        android:id="@+id/editTextTicketContents"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Write your complaint here..."
        android:inputType="textMultiLine"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="#EEEEEE " /> <!-- Line color -->

    <TextView
        android:id="@+id/textViewSubmitTicket"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:enabled="true"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:textSize="16sp"
        android:focusable="true"
        android:textColor="#808080 "
        android:textStyle="bold"
        android:layout_gravity="center|center_vertical"
        android:text="@string/txtSubmit"
        android:paddingBottom="10dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:indeterminateTint="#ffce1f"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>
